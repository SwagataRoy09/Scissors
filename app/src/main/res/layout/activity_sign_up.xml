<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sign_up"
    android:orientation="vertical"
    android:background="@drawable/m3">
       <LinearLayout
           android:layout_margin="@dimen/_10sdp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/_10sdp"
           android:layout_marginEnd="@dimen/_20sdp"
           android:background="@drawable/circle"
           android:backgroundTint="@color/white"
           android:orientation="vertical">
           <LinearLayout
               android:layout_gravity="center"
           android:layout_margin="@dimen/_10sdp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:backgroundTint="@color/white"
           android:orientation="horizontal">
               <TextView
                   android:layout_gravity="top"
                   android:layout_marginRight="@dimen/_130sdp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/_25sdp"
               android:fontFamily="@font/juaregular"
               android:gravity="left"
               android:text="   Join Us "
               android:textColor="@color/secondary"
               android:textSize="@dimen/_25sdp" />

              <ImageView
                  android:id="@+id/back"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:background="@drawable/border1"
                  android:backgroundTint="@color/yellow"
                  android:padding="@dimen/_4sdp"
                  android:src="@drawable/ic_baseline_arrow_back_ios_new_24"/>
           </LinearLayout>
           <com.google.android.material.textfield.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/_25sdp"
               app:boxBackgroundColor="#FFF"
               app:boxStrokeColor="#FFF"
               app:boxStrokeWidth="0dp"
               app:boxStrokeWidthFocused="0dp">
               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/email"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_marginLeft="@dimen/_10sdp"
                   android:layout_marginRight="@dimen/_40sdp"
                   android:background="@drawable/border2"
                   android:fontFamily="@font/artifikaregular"
                   android:hint="Email"
                   android:inputType="textWebEmailAddress"
                   android:maxLines="1"
                   android:textColorHint="@color/black"
                   android:textSize="@dimen/_10sdp"
                   android:textStyle="bold" />
           </com.google.android.material.textfield.TextInputLayout>
           <com.google.android.material.textfield.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/_20sdp"
               app:boxBackgroundColor="#FFF"
               app:boxStrokeColor="#FFF"
               app:boxStrokeWidth="0dp"
               app:boxStrokeWidthFocused="0dp">
               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/contact"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_marginLeft="@dimen/_10sdp"
                   android:layout_marginRight="@dimen/_40sdp"
                   android:background="@drawable/border2"
                   android:fontFamily="@font/artifikaregular"
                   android:hint="Contact Number"
                   android:inputType="number"
                   android:textColorHint="@color/black"
                   android:textSize="@dimen/_10sdp"
                   android:textStyle="bold" />
           </com.google.android.material.textfield.TextInputLayout>
           <com.google.android.material.textfield.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/_20sdp"
               app:boxBackgroundColor="#FFF"
               app:boxStrokeColor="#FFF"
               app:boxStrokeWidth="0dp"
               app:boxStrokeWidthFocused="0dp"
               app:passwordToggleEnabled="true"
               app:passwordToggleTint="@color/secondarythird">

               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/password"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_marginLeft="@dimen/_10sdp"
                   android:layout_marginRight="@dimen/_40sdp"
                   android:background="@drawable/border2"
                   android:fontFamily="@font/artifikaregular"
                   android:hint="Password"
                   android:inputType="textWebPassword"
                   android:textColorHint="@color/black"
                   android:textSize="@dimen/_10sdp"
                   android:textStyle="bold" />
           </com.google.android.material.textfield.TextInputLayout>
           <TextView
               android:id="@+id/tv_forgetpassword"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="end"
               android:layout_marginTop="@dimen/_10sdp"
               android:layout_marginRight="@dimen/_40sdp"
               android:fontFamily="@font/engagementregular"
               android:text="Forgot Password ?"
               android:textColor="@color/secondary" />


           <TextView
               android:id="@+id/tv_registerbutton"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_marginLeft="@dimen/_20sdp"
               android:layout_marginRight="@dimen/_50sdp"
               android:layout_marginTop="@dimen/_30sdp"
               android:background="@drawable/border3"
               android:backgroundTint="@color/yellow"
               android:fontFamily="@font/juaregular"
               android:gravity="center"
               android:paddingHorizontal="@dimen/_10sdp"
               android:paddingVertical="@dimen/_8sdp"
               android:text="Register"
               android:textColor="@color/black"
               android:textSize="@dimen/_15sdp"/>
           <TextView
               android:textColor="@color/black"
               android:id="@+id/login"
               android:textSize="@dimen/_8sdp"
               android:padding="@dimen/_5sdp"
               android:layout_marginLeft="@dimen/_8sdp"
               android:layout_width="wrap_content"
               android:text="Already have an account ?  LOGIN"
               android:fontFamily="@font/italic"
               android:layout_height="wrap_content"
               />
       </LinearLayout>
    <LinearLayout
        android:id="@+id/googleLogin"
        android:layout_gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/_2sdp"
        android:background="@drawable/circle"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_90sdp"
        android:layout_marginVertical="@dimen/_20sdp"
        >
        <ImageView
            android:id="@+id/google"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/google"
            />
        <TextView
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:id="@+id/tv_continue"
            android:gravity="center"
            android:textSize="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/artifikaregular"
            android:text="Continue With Google Account"
            android:textColor="@color/secondary" />
    </LinearLayout>

    <TextView
        android:textColor="@color/black"
        android:id="@+id/tandc"
        android:textSize="@dimen/_10sdp"
        android:padding="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/_70sdp"
        android:text="By Registering you accept Terms and Conditions"
        android:fontFamily="@font/engagementregular"
        android:layout_height="wrap_content"
        />
   </LinearLayout>
