<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcf5ff"
    android:orientation="vertical"

    tools:context=".home_page">
<LinearLayout
    android:id="@+id/layout"
    android:layout_marginTop="@dimen/_20sdp"
    android:layout_marginHorizontal="@dimen/_10sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/menuicon"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_20sdp"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:src="@drawable/menu"/>
    <TextView
        android:layout_marginHorizontal="@dimen/_60sdp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_40sdp"
        android:text="Scissors"
        android:fontFamily="@font/carattereregular"/>
    <ImageView
        android:layout_marginVertical="@dimen/_20sdp"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/cart"/>
</LinearLayout>

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="#110034"
                android:orientation="horizontal">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_marginVertical="@dimen/_5sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="@dimen/_100sdp"
                                android:src="@drawable/women" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/balsamiqsansbold"
                                android:gravity="center"
                                android:text="Women"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_8sdp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginVertical="@dimen/_5sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="@dimen/_100sdp"
                                android:src="@drawable/mens" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/balsamiqsansbold"
                                android:gravity="center"
                                android:text="Men"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_8sdp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginVertical="@dimen/_5sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="@dimen/_100sdp"
                                android:src="@drawable/jewellery" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/balsamiqsansbold"
                                android:gravity="center"
                                android:text="Jewellery"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_8sdp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginVertical="@dimen/_5sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="@dimen/_100sdp"
                                android:src="@drawable/makeup" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/balsamiqsansbold"
                                android:gravity="center"
                                android:text="Beauty"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_8sdp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginVertical="@dimen/_5sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="@dimen/_100sdp"
                                android:src="@drawable/bag" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/balsamiqsansbold"
                                android:gravity="center"
                                android:text="Accessories"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_8sdp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginVertical="@dimen/_5sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="@dimen/_100sdp"
                                android:src="@drawable/footware2" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/balsamiqsansbold"
                                android:gravity="center"
                                android:text="Footwear"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_8sdp" />
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ViewFlipper
                            android:id="@+id/flipper"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:autoStart="true"
                            android:flipInterval="4000"
                            android:outAnimation="@android:anim/fade_out"
                           android:inAnimation="@android:anim/fade_in"
                            >
                        <ImageView
                            android:layout_width="@dimen/_300sdp"
                            android:layout_height="@dimen/_200sdp"
                            android:background="@drawable/c3" />

                        <ImageView
                            android:background="#330E03"
                            android:layout_width="@dimen/_300sdp"
                            android:layout_height="@dimen/_200sdp"
                            android:src="@drawable/c1" />
                        <ImageView
                            android:background="#EDD2C3"
                            android:layout_width="@dimen/_300sdp"
                            android:layout_height="@dimen/_200sdp"
                            android:src="@drawable/c2" />
                        </ViewFlipper>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">

                    <LinearLayout
                        android:background="@color/emerald"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_marginTop="@dimen/_10sdp"
                            android:gravity="center"
                            android:textSize="@dimen/_28sdp"
                            android:textColor="@color/yellow"
                            android:fontFamily="@font/carattereregular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Scissors Exclusive"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/emerald"
                            android:orientation="horizontal">
                            <HorizontalScrollView

                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:scrollbars="none">

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="@dimen/_200sdp"
                                            android:layout_height="@dimen/_200sdp"
                                            android:src="@drawable/nly" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/balsamiqsansbold"
                                            android:gravity="center"
                                            android:text="ONLY"
                                            android:textColor="@color/yellow"
                                            android:textSize="@dimen/_10sdp" />
                                    </LinearLayout>

                                    <LinearLayout

                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="@dimen/_200sdp"
                                            android:layout_height="@dimen/_200sdp"
                                            android:src="@drawable/tokyotalkies" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/balsamiqsansbold"
                                            android:gravity="center"
                                            android:text="Tokyo Talkies"
                                            android:textColor="@color/yellow"
                                            android:textSize="@dimen/_10sdp" />
                                    </LinearLayout>



                                    <LinearLayout

                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="@dimen/_10sdp"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="@dimen/_200sdp"
                                            android:layout_height="@dimen/_200sdp"
                                            android:src="@drawable/aureliacloth" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/balsamiqsansbold"
                                            android:gravity="center"
                                            android:text="Aurelia"
                                            android:textColor="@color/yellow"
                                            android:textSize="@dimen/_10sdp" />
                                    </LinearLayout>
                                    <LinearLayout

                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="@dimen/_10sdp"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="@dimen/_200sdp"
                                            android:layout_height="@dimen/_200sdp"
                                            android:src="@drawable/w" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/balsamiqsansbold"
                                            android:gravity="center"
                                            android:text="W"
                                            android:textColor="@color/yellow"
                                            android:textSize="@dimen/_10sdp" />
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_marginHorizontal="@dimen/_10sdp"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="@dimen/_10sdp"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="@dimen/_200sdp"
                                            android:layout_height="@dimen/_200sdp"
                                            android:src="@drawable/levis" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/balsamiqsansbold"
                                            android:gravity="center"
                                            android:text="LEVI'S"
                                            android:textColor="@color/yellow"
                                            android:textSize="@dimen/_10sdp" />
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_marginHorizontal="@dimen/_10sdp"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="@dimen/_10sdp"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="@dimen/_200sdp"
                                            android:layout_height="@dimen/_200sdp"
                                            android:src="@drawable/veromoda" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/balsamiqsansbold"
                                            android:gravity="center"
                                            android:text="Vero Moda"
                                            android:textColor="@color/yellow"
                                            android:textSize="@dimen/_10sdp" />
                                    </LinearLayout>
                                </LinearLayout>
                            </HorizontalScrollView>
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</LinearLayout>